                            android:layout_marginStart="6dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/floor_3"
                            android:textColor="@color/main_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/humidity_progress2" />

                        <ProgressBar
                            android:id="@+id/humidity_progress3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:progressDrawable="@drawable/humidity_progress"
                            app:layout_constraintEnd_toStartOf="@+id/humidity_tvProgress2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_humidity_3" />

