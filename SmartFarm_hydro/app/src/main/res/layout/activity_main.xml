                                android:textFontWeight="400"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_temp_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/floor_1"
                            android:textColor="@color/main_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/temp_main" />

                        <ProgressBar
                            android:id="@+id/temp_progress1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:progressDrawable="@drawable/temp_progress"
                            app:layout_constraintEnd_toStartOf="@+id/temp_tvProgress1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_1" />

                        <TextView
                            android:id="@+id/temp_tvProgress1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="84dp"
                            android:fontFamily="sans-serif"
                            android:text="50%"
                            android:textColor="@color/temp_progress"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_1" />

                        <TextView
                            android:id="@+id/tv_temp_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/floor_2"
                            android:textColor="@color/main_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/temp_progress1" />

                        <ProgressBar
                            android:id="@+id/temp_progress2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:progressDrawable="@drawable/temp_progress"
                            app:layout_constraintEnd_toStartOf="@+id/temp_tvProgress2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_2" />

                        <TextView
                            android:id="@+id/temp_tvProgress2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="84dp"
                            android:fontFamily="sans-serif"
                            android:text="50%"
                            android:textColor="@color/temp_progress"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_2" />

                        <TextView
                            android:id="@+id/tv_temp_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/floor_3"
                            android:textColor="@color/main_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/temp_progress2" />

                        <ProgressBar
                            android:id="@+id/temp_progress3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:progressDrawable="@drawable/temp_progress"
                            app:layout_constraintEnd_toStartOf="@+id/temp_tvProgress2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_3" />

                        <TextView
                            android:id="@+id/temp_tvProgress3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="78dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/none"
                            android:textColor="@color/temp_progress"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_3" />

                        <TextView
                            android:id="@+id/tv_temp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/floor_4"
                            android:textColor="@color/main_text"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/temp_progress3" />

                        <ProgressBar
                            android:id="@+id/temp_progress4"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:progressDrawable="@drawable/temp_progress"
                            app:layout_constraintEnd_toStartOf="@+id/temp_tvProgress2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_4" />

                        <TextView
                            android:id="@+id/temp_tvProgress4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="78dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/none"
                            android:textColor="@color/temp_progress"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_temp_4" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/led_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/item_background"
                        android:elevation="10dp"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/led_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/led_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
